{
    "version": 3,
    "configurePresets": [
        {
            "name": "base-qt6",
            "displayName": "base preset",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build-${presetName}",
            "installDir": "$env{KF6}",
            "hidden": true
        },
        {
            "name": "dev-quick-qt6",
            "displayName": "Build as debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
		"BUILD_WITH_QT6": "ON",
                "BUILD_QUICK_VERSION": "ON"
            },
            "inherits": [
                "base-qt6"
            ]
        },	
        {
            "name": "dev-qt6",
            "displayName": "Build against qt6",
            "binaryDir": "${sourceDir}/build-qt6",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "BUILD_WITH_QT6": "ON",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            },
            "inherits": [
                "base-qt6"
            ]
        },
        {
            "name": "asan-qt6",
            "displayName": "Build with Asan support.",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
		"BUILD_WITH_QT6": "ON",
                "ECM_ENABLE_SANITIZERS" : "'address;undefined'"
            },
            "inherits": [
                "base-qt6"
            ]
        }	
    ],
    "buildPresets": [
        {
            "name": "dev-quick-qt6",
            "configurePreset": "dev-quick-qt6"
        },	
        {
            "name": "dev-qt6",
            "configurePreset": "dev-qt6"
        },
        {
            "name": "asan-qt6",
            "configurePreset": "asan-qt6"
        }
  ]
}
